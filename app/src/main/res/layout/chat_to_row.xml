<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:background="@color/darkBlueAppBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/send_user_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_image_holder"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/send_user_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_input"
        android:padding="16dp"
        android:text="This is a text to a user"
        app:layout_constraintBottom_toBottomOf="@id/send_user_iv"
        app:layout_constraintEnd_toStartOf="@id/send_user_iv"
        app:layout_constraintTop_toTopOf="@id/send_user_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>